#!/usr/bin/env python3
from grammar import Grammar

grm1 = Grammar([("S", ("F", "F"))])
grm2 = Grammar(
    [
        ("S", ("F",)),
        ("S", ("OPEN", "S", "PLUS", "F", "CLOSE")),
        ("F", ("a",)),
    ]
)
grm3 = eval(repr(grm2))
assert hash(grm1) != hash(grm2)
assert hash(grm2) == hash(grm3)
